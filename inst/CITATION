citHeader("To cite package 'peptoolkit' in publications use:")

year <- format(Sys.Date(), "%Y")
note <- "R package version 0.1.0"

bibentry(bibtype = "Manual",
         title = "{peptoolkit}: A toolkit for peptide analysis",
         author = personList(as.person("Josep-Ramon Codina")),
         year = year,
         note = note,
         url = "https://github.com/jrcodina/peptoolkit")

citFooter("A BibTeX entry for LaTeX users is")

print(bibentry(bibtype = "Manual",
               title = "{peptoolkit}: A toolkit for peptide analysis",
               author = personList(as.person("Josep-Ramon Codina")),
               year = year,
               note = note,
               url = "https://github.com/jrcodina/peptoolkit"), style = "Bibtex")
